{
    "manifest_version": 2,
    "name": "Pixel Snake",
    "version": "1.0.0",
    "description": "Play the sanke game in pixel",
    "browser_action": {
        "default_icon": {
	    "128": "icons/128.png",
	    "64": "icons/64.png",
	    "48": "icons/48.png",
	    "32": "icons/32.png",
	    "24": "icons/24.png",
	    "16": "icons/16.png"
	}
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "offline_enabled": true,
    "minimum_chrome_version": "70",
    "permissions": [ "storage", "unlimitedStorage" ],
    "icons": {
	"128": "icons/128.png",
	"64": "icons/64.png",
	"48": "icons/48.png",
	"32": "icons/32.png",
	"24": "icons/24.png",
	"16": "icons/16.png"
    }
}